<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/article_detail_return_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@mipmap/ic_circle_back_normal"
        />

    <!-- 最下面的评论栏 -->
    <LinearLayout
        android:id="@+id/article_detail_evaluate_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/article_evaluate_background_color"
        >
    </LinearLayout>

    <!-- 评论栏之上的布局 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/article_detail_evaluate_ll"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!-- 第一个布局是网页 -->
            <WebView
                android:id="@+id/article_detail_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </WebView>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>