<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/designer_item_bottom_rv"
        android:visibility="gone"
        ></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/designer_item_bottom_ll"
        android:visibility="gone"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="邀请一只鸟住进你家"
            android:textSize="25dp"
            android:id="@+id/designer_item_bottom_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="每个寂寥的大都市，都住着一群有趣的鸟"
            android:textSize="16dp"
            android:id="@+id/designer_item_bottom_subtitle"
            />
        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/designer_item_bottom_image"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/designer_item_bottom_ll2"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/designer_item_bottom_online_shop_image"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/designer_item_bottom_online_shop_name"
            android:text="Iittala 官方网站"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>