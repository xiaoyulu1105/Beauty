<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lu.beauty.MainActivity">

    <!--by 小玉-->

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/main_radio_group"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp"
        android:padding="5dp"
        android:background="#ffffffff">
        <RadioButton
            android:id="@+id/main_article_radio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_article"
            android:gravity="center"
            android:textColor="@drawable/selector_tabber_text"
            android:text="画报"/>
        <RadioButton
            android:id="@+id/main_product_radio"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_product"
            android:gravity="center"
            android:textColor="@drawable/selector_tabber_text"
            android:text="有物"/>
        <RadioButton
            android:id="@+id/main_designer_radio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_designer"
            android:gravity="center"
            android:textColor="@drawable/selector_tabber_text"
            android:text="设计师"/>
        <RadioButton
            android:id="@+id/main_my_radio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_my"
            android:gravity="center"
            android:textColor="@drawable/selector_tabber_text"
            android:text="我的"/>
    </RadioGroup>

</LinearLayout>
