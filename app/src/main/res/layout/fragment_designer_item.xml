<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1F1F1F"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@mipmap/a479c8bae"
        android:id="@+id/design_item_images"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:padding="5dp"
        android:id="@+id/design_item_follow"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/a041c1fd9"

        android:id="@+id/design_item_avatar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oiva Toikka"
        android:textSize="20dp"
        android:id="@+id/design_item_name"
        android:textColor="#A5A5A5"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/design_item_avatar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玻璃品设计师"
        android:id="@+id/design_item_label"
        android:textColor="#A5A5A5"
        android:layout_below="@+id/design_item_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="+ 关注"
        android:textSize="15dp"
        android:background="#74D5DA"
        android:id="@+id/design_item_button"
        android:layout_below="@+id/design_item_label"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />
</RelativeLayout>